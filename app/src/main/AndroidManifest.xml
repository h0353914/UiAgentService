<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
        tools:targetApi="34">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".UiAgentAccessibilityService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/uiagent_accessibility_config" />
        </service>

        <!-- "方案 B": 透過 adb shell am broadcast 傳指令，不需要 adb forward/socket -->
        <receiver
            android:name=".UiAgentCmdReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.uiagent.CMD" />
            </intent-filter>
        </receiver>

        <!-- UiAutomation Service: 用于访问系统级对话框（如权限对话框） -->
        <service
            android:name=".UiAutomationService"
            android:exported="false" />

    </application>

</manifest>
